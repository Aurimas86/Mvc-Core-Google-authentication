@model List<Project>
@using Google.Apis.CloudResourceManager.v1.Data

@{
    ViewData["Title"] = "Home Page";
    var i = 0;
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div style="margin: 20px;">
    <div>@Html.ActionLink("Logout", "Logout", "Account")</div>
    <div>@ViewBag.User.Name</div>
    <div>@ViewBag.User.Email</div>
    <div><img src="@ViewBag.User.Picture" width="100px" height="100px" class="rounded-circle"></div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>No</th>
            <th>@Html.DisplayNameFor(x => x[0].Name)</th>
            <th>@Html.DisplayNameFor(x => x[0].LifecycleState)</th>
            <th>@Html.DisplayNameFor(x => x[0].CreateTime)</th>
            <th>@Html.DisplayNameFor(x => x[0].ProjectId)</th>
            <th>@Html.DisplayNameFor(x => x[0].ProjectNumber)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in @Model)
        {
            <tr>
                <td>@(++i)</td>
                <td>@Html.DisplayFor(x => project.Name)</td>
                <td>@Html.DisplayFor(x => project.LifecycleState)</td>
                <td>@project.CreateTime.ToString()</td>
                <td>@Html.DisplayFor(x => project.ProjectId)</td>
                <td>@Html.DisplayFor(x => project.ProjectNumber)</td>
            </tr>
        }
    </tbody>
</table>
